<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.example.estsoft.travelfriendflow2.MainActivity">
    ​
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 여행 제목"
        android:id="@+id/textView17"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:layout_gravity="center"/>
    ​
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText8" />
    ​
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출발"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/textView18" />
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:id="@+id/startDate"
            android:onClick="dialogSelectSDate" />
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:id="@+id/startTime"
            android:layout_marginLeft="70dp"
            android:onClick="dialogSelectSTime" />
        ​
        ​
    </LinearLayout>
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        ​
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selected_sdate_textview"
            android:text="0000/00/00"
            />
        ​
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:id="@+id/selected_stime_textview"
            android:text="00-00"/>
        ​
    </LinearLayout>
    ​
    ​
    ​
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도착"
        android:layout_gravity="center"
        android:id="@+id/textView21"
        android:layout_marginTop="40dp"
        />
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:id="@+id/endDate"
            android:onClick="dialogSelectEDate" />
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:id="@+id/endTime"
            android:layout_marginLeft="70dp"
            android:onClick="dialogSelectETime" />
        ​
    </LinearLayout>
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        ​
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selected_edate_textview"
            android:text="0000/00/00"
            />
        ​
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:id="@+id/selected_etime_textview"
            android:text="00-00"/>
        ​
    </LinearLayout>
    ​
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:id="@+id/button"
        android:layout_marginTop="30dp"
        android:layout_gravity="center" />
    ​
</LinearLayout>